<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:cxf="http://cxf.apache.org/core" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
		http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd 
        http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:annotation-config />

	<!-- WS Service -->
	<bean id="portalServiceHomeEndPoint" class="org.easystogu.portal.HomeEndPoint">
	</bean>
	<jaxrs:server id="cxfrsservice_HomeEndPoint" address="/home">
		<jaxrs:serviceBeans>
			<ref bean="portalServiceHomeEndPoint" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="portalServicePriceEndPoint" class="org.easystogu.portal.PriceEndPoint">
	</bean>
	<jaxrs:server id="cxfrsservice_PriceEndPoint" address="/price">
		<jaxrs:serviceBeans>
			<ref bean="portalServicePriceEndPoint" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="portalServiceIndicatorEndPoint" class="org.easystogu.portal.IndicatorEndPoint">
	</bean>
	<jaxrs:server id="cxfrsservice_IndicatorEndPoint" address="/ind1">
		<jaxrs:serviceBeans>
			<ref bean="portalServiceIndicatorEndPoint" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="portalServiceIndicatorEndPointV2" class="org.easystogu.portal.IndicatorEndPointV2">
	</bean>
	<jaxrs:server id="cxfrsservice_IndicatorEndPointV2"
		address="/ind2">
		<jaxrs:serviceBeans>
			<ref bean="portalServiceIndicatorEndPointV2" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="portalServiceIndicatorEndPointV3" class="org.easystogu.portal.IndicatorEndPointV3">
	</bean>
	<jaxrs:server id="cxfrsservice_IndicatorEndPointV3"
		address="/ind3">
		<jaxrs:serviceBeans>
			<ref bean="portalServiceIndicatorEndPointV3" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="portalServiceCompanyInfoEndPoint" class="org.easystogu.portal.CompanyInfoEndPoint">
	</bean>
	<jaxrs:server id="cxfrsservice_CompanyInfoEndPoint"
		address="/company">
		<jaxrs:serviceBeans>
			<ref bean="portalServiceCompanyInfoEndPoint" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="portalServiceTrendModeEndPoint" class="org.easystogu.portal.TrendModeEndPoint">
	</bean>
	<jaxrs:server id="cxfrsservice_TrendModeEndPoint" address="/trendmode">
		<jaxrs:serviceBeans>
			<ref bean="portalServiceTrendModeEndPoint" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" />
		</jaxrs:providers>
	</jaxrs:server>
</beans>